<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        android:id="@+id/ibf_cardview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_grey"
            android:gravity="center"
            android:padding="12dp">

            <TextView
                android:id="@+id/ibf_tv_product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:text="Produit 1"
                android:textColor="@color/dark_blue" />

            <TextView
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:id="@+id/ibf_tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ibf_tv_product_name"
            android:layout_centerHorizontal="true"
            android:text="5"
            android:textColor="@color/dark_blue" />

            <TextView
                android:id="@+id/ibf_tv_euro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/euro_basket"
                android:textColor="@color/dark_blue"
                android:layout_alignTop="@+id/ibf_tv_product_price"
                android:layout_toRightOf="@+id/ibf_tv_product_price"
                android:layout_toEndOf="@+id/ibf_tv_product_price" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ibf_tv_product_price"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ibf_quantity"
                    android:textColor="@color/dark_blue" />

                <TextView
                    android:id="@+id/ibf_tv_product_quantity_nb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textColor="@color/dark_blue" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>